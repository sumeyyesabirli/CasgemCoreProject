@model PizzapanPresentationLayer.Models.ConfirmMailViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Email Onay</title>
    <link href="~/sidebar-09/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex align-items-center justify-content-center flex-column vh-100 m-auto ">
        <h4>Email Onay Sayfası</h4>
        <div class="row">
            <form asp-action="Index">
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" value="@ViewBag.username" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmCode" class="control-label"></label>
                    <input asp-for="ConfirmCode" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </div>
            </form>

        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>
</html>
