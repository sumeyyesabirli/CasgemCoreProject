@model Discount
@{
    ViewData["Title"] = "CreateCode";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>yeni indirim kodu</h1>

<form method="post">
    <label>indirim kodu</label>
    <input type="text" class="form-control" asp-for="DiscountCode" value=" @ViewBag.DiscountCode" readonly />
    <br />
    <label>İndirim Kodu Kullanım Sayısı</label>
    <input type="text" class="form-control" style="background-color:darkgrey" asp-for="DiscountCount" />
    <br />
    
    <button class="btn btn-outline-primary">Kupon Oluştur</button>
</form>