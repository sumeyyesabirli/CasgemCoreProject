@model List<PizzapanEntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Kategori Ürünleri</th>
        <th>Sitede Gör</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td><a href="#" class=" btn btn-outline-info">Kategori Ürünleri</a></td>
            <td><a href="#" class=" btn btn-outline-warning">Sitede Gör</a></td>
            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">sil</a></td>
            <td><a href="#" class=" btn btn-outline-danger">Güncelle</a></td>
        </tr>
        
    }
</table>
<a href="#" class=" btn btn-outline-primary">Yeni Kategori Girişi</a>