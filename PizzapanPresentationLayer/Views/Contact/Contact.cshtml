@model Contact


@{
    Layout = null;
}

<html>

@await Component.InvokeAsync("_HeadPartial")
<body>
    @await Component.InvokeAsync("_NavbarPartial")
    <section class="w3l-breadcrumb">
        <div class="container">
            <ul class="breadcrumbs-custom-path">
                <li><a asp-controller="Default" asp-action="Index">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span>İletişim</li>
            </ul>
        </div>
    </section>


    <section class="w3l-contact-11 py-5">
        <div class="contacts-main py-lg-5 py-md-4">
            <div class="contant11-top-bg">
                <div class="container">
                    <div class="title-content text-center">
                        <h6 class="sub-title">İletişim</h6>
                        <h3 class="title-big">Bize Yazın</h3>
                    </div>
                    <div class="d-grid contact section-gap mt-lg-5 mt-4">
                        <div class="contact-info-left d-grid text-center">
                            <div class="contact-info">
                                <span class="fa fa-map-marker" aria-hidden="true"></span>
                                <h4>Buradayız</h4>
                                <p>Şişli - İstanbul</p>
                            </div>
                            <div class="contact-info">
                                <span class="fa fa-phone" aria-hidden="true"></span>
                                <h4>Bizi Arayın</h4>
                                <p>
                                    <a href="tel:+1-2345-678-11">
                                        03125780080
                                    </a>
                                </p>
                                <p><a href="mailto:pizza@order.com" class="email">pizzapan@order.com</a></p>
                            </div>
                            <div class="contact-info">
                                <span class="fa fa-clock-o" aria-hidden="true"></span>
                                <h4>Çalışma Saatleri</h4>
                                <p>
                                    Pazartesi - Cuma
                                </p>
                                <p>09:00 - 22:00</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-41-mian section-gap mt-5">
                <div class="container">
                    <div class="d-grid align-form-map">
                        <div class="form-inner-cont">
                            <form method="post">
                                <div class="form-input">
                                    <input type="text" class="form-control" asp-for="Name" placeholder="Adınız"
                                           required="">
                                </div>
                                <div class="form-input">
                                    <input type="email" class="form-control" asp-for="Email" placeholder="Email"
                                           required="">
                                </div>
                                <div class="form-input">
                                    <input type="text" class="form-control" asp-for="Subject" placeholder="Konu" required="">
                                </div>
                                <div class="form-input">
                                    <textarea type="text" rows="5" class="form-control" asp-for="Message" placeholder="Mesaj"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-style mt-4">Mesajı Gönder</button>
                            </form>
                        </div>
                        <div class="map">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12222.54643001814!2d32.822596!3d40.016564!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d34c91ab578edf%3A0x28f74ba8f84ef61f!2zw5Z6ZGlsZWs!5e0!3m2!1str!2str!4v1689954689069!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen=""></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @await Component.InvokeAsync("_FootersContact")
    <!-- move top -->
    @await Component.InvokeAsync("_ScriptPartial")
</body>
</html>